{
  "name": "@bit/client",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently -k -n db,zero,ui -c blue,green,yellow \"bun run dev:db-up\" \"bun run dev:zero-cache\" \"bun run dev:ui\"",
    "dev:ui": "vite",
    "dev:zero-cache": "zero-cache-dev",
    "dev:db-up": "docker compose --env-file .env -f ./docker/docker-compose.yml up",
    "dev:db-down": "docker compose --env-file .env -f ./docker/docker-compose.yml down",
    "dev:clean": "docker volume rm -f docker_zstart_pgdata && rm -rf ./zstart_replica*",
    "build": "tsc -b && vite build",
    "lint": "bun run lint:tsc && bun run lint:eslint",
    "lint:tsc": "tsc -b --noEmit",
    "lint:eslint": "eslint .",
    "lint:fix": "eslint . --fix",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "generate-zero-schema": "drizzle-zero generate -f -o src/db/schema.ts",
    "format": "oxfmt --write .",
    "format:check": "oxfmt --check ."
  },
  "dependencies": {
    "@base-ui/react": "^1.0.0",
    "@pierre/diffs": "^1.0.0",
    "@primer/octicons-react": "^19.21.1",
    "@rocicorp/zero": "^0.25.2",
    "@shikijs/markdown-it": "^3.20.0",
    "@tanstack/react-router": "^1.142.7",
    "better-auth": "^1.4.7",
    "drizzle-orm": "^0.41.0",
    "jose": "^5.9.6",
    "js-cookie": "^3.0.5",
    "markdown-it-async": "^2.2.0",
    "octokit": "^5.0.5",
    "oxfmt": "^0.19.0",
    "pg": "^8.16.3",
    "react": "^18.3.1",
    "react-diff-viewer-continued": "^3.4.0",
    "react-dom": "^18.3.1",
    "shiki": "^3.20.0",
    "sst": "3.9.33",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@hono/node-server": "^1.13.2",
    "@tanstack/router-plugin": "^1.142.7",
    "@types/js-cookie": "^3.0.6",
    "@types/node": "^22.7.9",
    "@types/pg": "^8.16.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^9.2.1",
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.31.8",
    "drizzle-zero": "^0.17.0",
    "eslint": "^9.9.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "globals": "^15.9.0",
    "hono": "^4.6.6",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.0.1",
    "vercel": "^41.3.2",
    "vite": "^5.4.1"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@rocicorp/zero-sqlite3"
    ]
  },
  "trustedDependencies": [
    "@rocicorp/zero-sqlite3"
  ]
}
